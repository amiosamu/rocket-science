# Notification Service Configuration Example

# Service Configuration
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8080
HEALTH_PORT=8081
GRACEFUL_SHUTDOWN_TIMEOUT=30s

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=notification-service-group
KAFKA_CLIENT_ID=notification-service
KAFKA_SESSION_TIMEOUT=30s
KAFKA_HEARTBEAT_INTERVAL=3s
KAFKA_REBALANCE_TIMEOUT=60s
KAFKA_INITIAL_OFFSET=newest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_AUTO_COMMIT_INTERVAL=1s
KAFKA_MAX_PROCESSING_TIME=30s
KAFKA_CONCURRENCY_LEVEL=1
KAFKA_RETRY_ATTEMPTS=3
KAFKA_RETRY_BACKOFF=1s
KAFKA_ENABLE_DEAD_LETTER=true
KAFKA_DEAD_LETTER_TOPIC=notification-dead-letter

# Kafka Topics
KAFKA_ORDER_EVENTS_TOPIC=order-events
KAFKA_PAYMENT_EVENTS_TOPIC=payment-events
KAFKA_ASSEMBLY_EVENTS_TOPIC=assembly-events

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_TIMEOUT=30s
TELEGRAM_RETRY_COUNT=3
TELEGRAM_RETRY_DELAY=1s
TELEGRAM_MESSAGE_LIMIT=4096
TELEGRAM_ENABLE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=

# IAM Client Configuration
IAM_SERVICE_HOST=localhost
IAM_SERVICE_PORT=50051
IAM_CLIENT_TIMEOUT=10s
IAM_CLIENT_RETRY_COUNT=3
IAM_CLIENT_RETRY_DELAY=1s
IAM_CLIENT_ENABLE_TLS=false
IAM_CLIENT_TLS_INSECURE=true
IAM_CLIENT_CERT_FILE=
IAM_CLIENT_KEY_FILE=
IAM_CLIENT_CA_FILE=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/notification-service.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=7
LOG_COMPRESS=true
LOG_ENABLE_CALLER=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_NAMESPACE=rocket_science
METRICS_SUBSYSTEM=notification_service

# Tracing Configuration
TRACING_ENABLED=true
TRACING_SERVICE_NAME=notification-service
TRACING_SERVICE_VERSION=1.0.0
TRACING_ENVIRONMENT=development
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_SAMPLING_RATE=1.0
TRACING_BATCH_TIMEOUT=1s
TRACING_MAX_BATCH_SIZE=100 