# Rocket Science Microservices - Environment Configuration
# Copy this file to .env and update the values for your environment

# =================================
# DATABASE CONFIGURATION
# =================================

# PostgreSQL Database
DB_USER=rocket_user
DB_PASSWORD=change_this_strong_password_123!
DB_NAME=rocket_science
DB_NAME_ORDERS=rocket_orders

# MongoDB
MONGO_USER=rocket_user
MONGO_PASSWORD=change_this_mongo_password_456!

# Redis
REDIS_PASSWORD=change_this_redis_password_789!

# =================================
# AUTHENTICATION & SECURITY
# =================================

# JWT Secret - Use a strong, unique secret key
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random

# =================================
# EXTERNAL SERVICES
# =================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =================================
# MONITORING & OBSERVABILITY
# =================================

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password!
GRAFANA_SECRET_KEY=change_this_grafana_secret_key_123

# Kibana Configuration
KIBANA_PASSWORD=change_this_kibana_password!

# =================================
# DEPLOYMENT CONFIGURATION
# =================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Application Version
APP_VERSION=1.0.0

# =================================
# OPTIONAL CONFIGURATIONS
# =================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Enable Debug Mode (true/false)
DEBUG_MODE=false

# Timezone
TZ=UTC

# =================================
# EXTERNAL REGISTRY (for production)
# =================================

# Docker Registry (optional - for production deployments)
# DOCKER_REGISTRY=your-registry.com/your-namespace

# Registry Credentials (if needed)
# REGISTRY_USERNAME=your_username
# REGISTRY_PASSWORD=your_password

# =================================
# BACKUP CONFIGURATION (optional)
# =================================

# Backup Schedule (cron format)
# BACKUP_SCHEDULE=0 2 * * *

# Backup Retention Days
# BACKUP_RETENTION_DAYS=7

# S3 Backup Configuration (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_BACKUP_BUCKET=your-backup-bucket
# AWS_REGION=us-west-2

# =================================
# PERFORMANCE TUNING
# =================================

# Database Connection Pool Sizes
# DB_MAX_CONNECTIONS=20
# DB_MIN_CONNECTIONS=5

# Redis Connection Pool
# REDIS_MAX_CONNECTIONS=20

# Kafka Configuration
# KAFKA_BATCH_SIZE=16384
# KAFKA_LINGER_MS=10

# =================================
# NOTES
# =================================
# 1. Change ALL passwords and secrets before deploying to production
# 2. Use environment-specific files (.env.staging, .env.production)
# 3. Never commit .env files to version control
# 4. Consider using secret management services for production
# 5. Regularly rotate passwords and secrets 